<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#f2f2f2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff0030"
        android:paddingTop="10dp"
        android:id="@+id/login_rl"
        android:paddingBottom="10dp">
    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:background="@drawable/back"
        android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="18sp"
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请输入用户名/手机号"
        android:background="#fff"
        android:layout_marginTop="5dp"
        android:layout_below="@id/login_rl"
        android:id="@+id/login_zhang"
        android:paddingLeft="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请输入密码"
        android:background="#fff"
        android:theme="@style/Widget.AppCompat.EditText"
        android:layout_marginTop="5dp"
        android:layout_below="@id/login_zhang"
        android:paddingLeft="20dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="登录"
        android:background="#ff0030"
        android:textColor="#fff"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新用户"
        android:textColor="#18C6FD"
        android:id="@+id/zhuce"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:id="@+id/wangji"
        android:layout_below="@+id/button"
        android:textColor="#18C6FD"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/zhuce"
        android:layout_marginRight="20dp" />
</RelativeLayout>
