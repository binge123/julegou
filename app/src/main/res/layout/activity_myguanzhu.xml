<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/zbg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/activity_graybg"
        android:id="@+id/mygz_rl"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/guanzhuimg"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backhei"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/guanzhuimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的关注"
            android:textColor="@color/black_text_color"
            android:textSize="22sp"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_below="@id/mygz_rl"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/press_click_color"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/mygz_rl2"
        android:layout_below="@id/view">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="@string/gzdp"
                android:id="@+id/mygz_dp"
                android:gravity="center"
                android:background="@drawable/radio_button_style2"
                android:button="@null"
                android:layout_height="match_parent" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/mygz_sp"
                android:background="@drawable/radio_button_style2"
                android:button="@null"
                android:text="@string/scsp"
                android:layout_height="match_parent" />
    </RadioGroup>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mygz_rl2"
        android:id="@+id/gz_list"></ListView>
</RelativeLayout>
