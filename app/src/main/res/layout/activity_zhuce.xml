<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#f2f2f2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff0030"
        android:paddingTop="10dp"
        android:id="@+id/zhuce_rl"
        android:paddingBottom="10dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/back"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textColor="#fff"
            android:textSize="18sp"
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请输入用户名/手机号"
        android:background="#fff"
        android:layout_marginTop="5dp"
        android:layout_below="@id/zhuce_rl"
        android:id="@+id/zhuce_zhang"
        android:paddingLeft="20dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/zhuce_zhang"
        android:id="@+id/zhuce_ma"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="#fff"
        android:paddingLeft="20dp"
        android:layout_toLeftOf="@+id/zhuce_yan"
        android:hint="请输入验证码"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/zhuce_ma"
        android:id="@+id/zhuce_yan"
        android:background="#ff0030"
        android:text="发送验证码"
        android:textColor="#FFF"
        android:layout_alignParentRight="true"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请输入密码"
        android:paddingLeft="20dp"
        android:id="@+id/zhuce_mima"
        android:layout_below="@id/zhuce_ma"
        android:background="#fff"
        android:layout_marginTop="5dp"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="注册"
        android:textColor="#fff"
        android:onClick="zhuCe"
        android:layout_below="@id/zhuce_mima"
        android:layout_marginTop="50dp"
        android:background="#ff0030"/>
</RelativeLayout>
