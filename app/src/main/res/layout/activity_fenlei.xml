<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/zbg">
    <LinearLayout
        android:id="@+id/fenlei_rl"
        android:orientation="horizontal"
        android:background="#ff0030"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textSize="22sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fenlei_search"
        android:layout_below="@id/fenlei_rl"
        android:background="#ECECEC"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/searchButton"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/searchs"/>
    </LinearLayout>

   <LinearLayout
       android:layout_below="@id/fenlei_search"
       android:background="#ECECEC"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ListView
           android:id="@+id/fenlei_lv"
           android:background="#FFF"
           android:dividerHeight="1dp"
           android:divider="#ECECEC"
           android:scrollbars="none"
           android:layout_width="100dp"
           android:layout_height="wrap_content">

       </ListView>
       <in.srain.cube.views.GridViewWithHeaderAndFooter
           android:id="@+id/fenlei_gv"
           android:background="#FFF"
           android:paddingLeft="5dp"
           android:paddingRight="5dp"
           android:scrollbars="none"
           android:numColumns="auto_fit"
           android:verticalSpacing="10dp"
           android:horizontalSpacing="10dp"
           android:layout_width="fill_parent"
           android:stretchMode="columnWidth"
           android:gravity="center"
           android:layout_marginLeft="1dp"
           android:layout_height="fill_parent">

       </in.srain.cube.views.GridViewWithHeaderAndFooter>
   </LinearLayout>
</RelativeLayout>
