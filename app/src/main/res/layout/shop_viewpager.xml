<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.best.weidget.ScrollViewContainer
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/image"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/details"/>

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_below="@id/image"
                    android:background="#fff"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/money_textView"
                        android:text="￥188"
                        android:textSize="20sp"
                        android:textColor="#ff9000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/money_textView1"
                        android:text="￥188"
                        android:textSize="16sp"
                        android:textColor="#B9B9B9"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/line"
                    android:layout_below="@id/image"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="#fff"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:background="#fff"
                        android:layout_height="fill_parent">
                        <TextView
                            android:id="@+id/shopspec"
                            android:text="时间段奥迪是奇偶的董事局都解散殴打搜倒是我都撒娇偶读偶家"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/share"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:background="#fff"
                        android:layout_marginLeft="1dp"
                        android:paddingLeft="10dp"
                        android:layout_height="fill_parent">
                        <ImageView
                            android:background="@drawable/share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="分享"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line2"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="25dp"
                    android:background="#fff"
                    android:orientation="horizontal"
                    android:layout_below="@id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv"
                        android:layout_weight="1"
                        android:text="包邮"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv1"
                        android:layout_weight="1"
                        android:text="库存：1222"
                        android:textSize="14sp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv2"
                            android:layout_marginLeft="10dp"
                            android:drawableLeft="@drawable/shangdianimg"
                            android:text="青春不再有"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/guige"
                    android:layout_below="@id/line2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="45dp"
                    android:background="#FFF">
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="颜色分类"
                        android:textSize="16sp"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/backs"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel"
                    android:layout_below="@id/guige"
                    android:layout_marginTop="10dp"
                    android:paddingTop="5dp"
                    android:background="#fff"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/pinglun_img"
                        android:layout_toLeftOf="@id/text"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/pungluns"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评论"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>
                <!-- 宝贝评价 -->
                <LinearLayout
                    android:id="@+id/pingjia"
                    android:layout_below="@id/rel"
                    android:background="@color/bai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="#5A5859"
                        android:text="宝贝评价"/>
                    <!-- 宝贝印象 -->
                    <GridView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></GridView>
                    <!-- 宝贝评论 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <!-- 用户头像、名称、等级 -->
                        <LinearLayout
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="#000"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="14sp"
                                android:textColor="#7E7C7D"
                                android:text="郑方斌"/>
                            <!--<TextView-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_marginLeft="10dp"-->
                                <!--android:textSize="14sp"-->
                                <!--android:textColor="#BADB6B"-->
                                <!--android:text="vip2"/>-->
                        </LinearLayout>
                        <!-- 评价内容 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="30dp"
                                android:padding="5dp"
                                android:textColor="#7E7C7D"
                                android:textSize="13sp"
                                android:text="评价内容"/>
                        </LinearLayout>
                        <!-- 套餐类型 日期 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_gravity="right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:text="2015-12-12"/>
                        </LinearLayout>
                        <!-- 查看评论按钮 -->
                        <LinearLayout
                            android:padding="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">
                            <Button
                                android:id="@+id/btn_look_pinlun"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:textColor="#FFF"
                                android:text="查看全部评论"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <!--间隔-->
                <LinearLayout
                    android:id="@+id/jiange"
                    android:orientation="horizontal"
                    android:layout_below="@id/pingjia"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#ECECEC"></LinearLayout>

                <!-- 店铺信息 -->
                <LinearLayout
                    android:id="@+id/message"
                    android:layout_below="@id/jiange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bai"
                    android:orientation="vertical">
                    <!-- 店铺名称 -->
                    <RelativeLayout
                        android:id="@+id/relative_rel"
                        android:paddingTop="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_dianpu_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="#000"/>
                        <TextView
                            android:id="@+id/txt_dianpu_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/iv_dianpu_img"
                            android:layout_centerVertical="true"
                            android:padding="3dp"
                            android:layout_marginLeft="8dp"
                            android:textSize="18sp"
                            android:textColor="@color/blue2"
                            android:text="店铺名称"/>
                        <ImageView
                            android:id="@+id/iv_backs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/backs"/>
                    </RelativeLayout>

                    <!-- 店铺信息 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/blue2"
                                android:textSize="16sp"
                                android:text="30"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/blue2"
                                android:textSize="16sp"
                                android:text="全部宝贝"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/zbg"/>
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/blue2"
                                android:textSize="16sp"
                                android:text="1880"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/blue2"
                                android:textSize="16sp"
                                android:text="人在买"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/zbg"/>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                           <TextView
                               android:text="所在地"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="16sp"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <!-- 查看分类  进入店铺 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <Button
                            android:id="@+id/btn_look_dianpu"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"
                            android:textColor="#FFF"
                            android:text="进入店铺"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/message"
                    android:background="#eeeeee"
                    android:gravity="center"
                    android:text="----------请继续拖动，刷新页面----------"
                    android:textSize="16sp" />

            </RelativeLayout>
        </ScrollView>

        <ScrollView
            android:layout_marginBottom="-50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="sdasdsad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </ScrollView>
    </com.best.weidget.ScrollViewContainer>
    <LinearLayout
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="#ECECEC"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="#fff"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/kefu"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客服"/>

            </LinearLayout>
            <LinearLayout
                android:background="#fff"
                android:layout_marginLeft="1dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dianpu"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商铺"/>
            </LinearLayout>

            <LinearLayout
                android:background="#fff"
                android:layout_marginLeft="1dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/collection"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/addCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加入购物车"
                android:textSize="16sp"
                android:textColor="#fff"
                android:layout_weight="1"
                android:background="#ff9000"/>
            <Button
                android:id="@+id/buyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即购买"
                android:textSize="16sp"
                android:textColor="#fff"
                android:layout_weight="1"
                android:background="#ff0030"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/all_choice_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000"
        android:orientation="horizontal"
        android:visibility="gone">
    </LinearLayout>



</RelativeLayout>