<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/activity_graybg"
        android:paddingTop="10dp"
        android:id="@+id/mymess_rl"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/messageimg"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backhei"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_toRightOf="@id/messageimg"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的消息"
            android:textColor="@color/black_text_color"
            android:textSize="22sp"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_below="@id/mymess_rl"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/press_click_color"/>
</RelativeLayout>
